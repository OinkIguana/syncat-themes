doctype {
  color: cyan;
}

start_tag > "<", start_tag > ">", 
self_closing_tag > "<", self_closing_tag > "/>", 
end_tag > "</", end_tag > ">",
attribute > "=" {
  color: purple;
}

tag_name {
  color: red;
}

attribute_name {
  color: 11;
}

quoted_attribute_value,
attribute_value {
  color: green;
}

comment {
  color: 15;
  italic: true;
}

raw_element [tag_name "style"] raw_text {
  language: css;
}

raw_element [tag_name "script"] raw_text {
  language: js;
}
